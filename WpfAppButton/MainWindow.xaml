<Window x:Class="WpfAppButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppButton"
        mc:Ignorable="d"
        Title="MainWindow" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Employee Registration Form" Grid.Row="0" Grid.Column="0" FontSize="20"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0">Please fill in the information requested below in order to complete the employee registration. Thank you!</TextBlock>
        <TextBox ></TextBox>
    </Grid>
</Window>
